#!/bin/sh
set -e
UG=eyefi
P=eyekindo
H=/var/lib/$P

if [ "$1" = configure ] ; then
 getent group $UG >/dev/null 2>&1 || addgroup --system $UG
 getent passwd $UG >/dev/null 2>&1 || adduser --system --home $H \
     --no-create-home --disabled-password --ingroup $UG $UG
 if ! test -d $H ; then
  mkdir -p $H
  chown $UG:$UG $H
  chmod 2770 $H
 fi
fi

